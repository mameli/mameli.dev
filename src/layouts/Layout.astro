<!--
  Migrated Layout.tsx to Astro's component structure.
  Replaces Next.js-specific features with Astro equivalents.
-->
---
import "../styles/global.css";
import BaseHead from '../components/BaseHead.astro';

interface Props {
  title?: string;
}

const { title = 'Mameli.Dev' } = Astro.props;
---

<html lang="en">
  <head>
		<BaseHead title={title} description="Mameli.Dev blog" />
	</head>
  <body>
    <div class="container mx-auto max-w-full dark:bg-gray-800 bg-white flex flex-col min-h-screen justify-between">
      <header>
      </header>
      <main class="max-w-3xl mx-auto px-2 sm:px-6 lg:px-8 pb-2 bg-white dark:bg-gray-800 grow">
        <slot />
      </main>
    </div>
  </body>
</html>